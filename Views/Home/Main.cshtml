<script>
    $(document).ready(function () {
       
        $("#add_window").hide();

        $("#btn_add_window").on("click", function () {


            $("#add_window").toggle();
            window.scrollTo(0, 400);
            $("#successDiv").hide()
            $("#failueDiv").hide();
            $("#errorDiv").hide();

           

        });

        $("#bSave").on("click", function () {

            var pName = $("#pn").val();
            var subCode = $("#subcode").val();
            var unSubCode = $("#unsubcode").val();
            var subMsg = $("#submsg").val();
            var unSubMsg = $("#unsubmsg").val();
            var pkgDetails = $("#pkgdetail").val();
            var network = $('#networkname :selected').text();
            var pkgCategory = $('#packagecategory :selected').text();
            var validity = $("#validityperiod").val();
            var charges = $("#charges").val();
            
            if (pName.length == 0 || pName == null || subCode.length == 0 || subCode == null || unSubCode.length == 0 || unSubCode == null
               || subMsg.length == 0 || subMsg == null || unSubMsg.length == 0 || unSubMsg == null || pkgDetails.length == 0 || pkgDetails == null
               || network.length == 0 || network == null || pkgCategory.length == 0 || pkgCategory == null || validity.length == 0 || validity == null
               || charges.length == 0 || charges == null) {

                $("#errorDiv").show(100);

            }
            else {
                $.getJSON("/Home/AddPkg?pn=" + pName + "&subcode=" + subCode + "&unsubcode=" + unSubCode + "&submsg=" + subMsg
                    + "&unsubmsg=" + unSubMsg + "&network=" + network + "&cat=" + pkgCategory + "&validity=" + validity
                    + "&details=" + pkgDetails + "&charges=" + charges, function (isAlready) {

                    if (isAlready) {

                        $("#successDiv").show(100);

                        $("#pn").val("");
                        $("#subcode").val("");
                        $("#unsubcode").val("");
                        $("#submsg").val("");
                        $("#unsubmsg").val("");
                        $("#pkgdetail").val("");
                        $("#validityperiod").val("");
                        $("#charges").val("");


                    } else {

                        $("#failureDiv").show(100);
                    }

                });

            }
        

        });
    });

</script>

